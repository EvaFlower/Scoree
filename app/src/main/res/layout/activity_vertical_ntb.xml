<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423752">

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_vertical"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:ntb_preview_colors="@array/vertical_ntb"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_vertical_ntb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ntb_vertical"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/vp_vertical_ntb"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="#03A9F4"/>

    <TextView
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/search_icon"
        android:text="查找的乐谱名称"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/score_pic_first"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/vp_vertical_ntb"
        android:layout_below="@id/search_icon"
        android:background="#03A9F4"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/score_name_first"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/search_icon"
        android:layout_toRightOf="@id/score_pic_first"
        android:text="两只老虎"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/score_pic_second"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/vp_vertical_ntb"
        android:layout_below="@id/score_pic_first"
        android:background="#03A9F4"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/score_name_second"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/score_name_first"
        android:layout_toRightOf="@id/score_pic_first"
        android:text="爱尔兰画眉"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/score_pic_third"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/vp_vertical_ntb"
        android:layout_below="@id/score_name_second"
        android:background="#03A9F4"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/score_name_third"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/score_pic_second"
        android:layout_toRightOf="@id/score_pic_first"
        android:text="小星星"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
