<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_setting"
            android:layout_width="@dimen/title_setting_width"
            android:layout_height="@dimen/title_setting_height"
            android:layout_margin="@dimen/padding_size"
            android:text="设置"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="@dimen/padding_size"
            android:layout_height="@dimen/padding_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_setting" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="乐谱行数："
        android:textSize="@dimen/text_size"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="一面乐谱显示"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/sp_num_of_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size"
            android:entries="@array/spa_num_of_lines"
            android:spinnerMode="dialog" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="行"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="翻页方式："
        android:textSize="@dimen/text_size"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/rg_page_turn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="普通"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/rb_split"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分屏"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_split_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_size"
                    android:text="分屏过渡"
                    android:textSize="@dimen/text_size"/>
                <Spinner
                    android:id="@+id/sp_split_buffer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size"
                    android:spinnerMode="dialog" />
                <TextView
                    android:id="@+id/text_split_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="行"
                    android:textSize="@dimen/text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>